{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build project",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/storage.cpp",
                "${workspaceFolder}/BPlusTree.cpp",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiler: g++"
        }
    ]
}
